@inherits NBrightBuy.render.NBrightBuyRazorTokens<NBrightDNN.NBrightRazor>
@using System.Globalization
@using NBrightDNN


@AddMetaData("resourcepath", "/DesktopModules/NBright/NBrightBuy/App_LocalResources/")
@AddMetaData("resourcepath", "/DesktopModules/NBright/NBrightBuyReport/App_LocalResources/")

<input id="typecode" type="hidden" value="NBSREPORT" /><!-- used as selected edit itemid -->
<input id="currentlang" type="hidden" value="@CultureInfo.CurrentCulture" /> <!-- get the current culture and pass to the ajax server side, so it knows what language is -->
<input id="selectlang" type="hidden" value="" /><!--used switch langauges -->

<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="box">
            <div class="box-content">
                <table class="table table-striped table-hover table-responsive">
                    <thead>
                        <tr style="width: 100%">
                            <th>@ResourceKey("Admin.ref")</th>
                            <th>@ResourceKey("Admin.name")</th>
                            <th></th>
                            <th>@ResourceKey("Admin.disabled")</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (NBrightInfo x in Model.List)
                        {
                            // dummy record inject for empty list
                            if (x.ItemID > 0)
                            {
                                <tr>
                                    <td>@x.GUIDKey</td>
                                    <td>@x.GetXmlProperty("genxml/lang/genxml/textbox/name")</td>
                                    <td></td>
                                    <td>
                                        @{var i = "fa-circle";
                                            if (x.GetXmlPropertyBool("genxml/checkbox/disabled"))
                                            {
                                                i = "fa-check-circle";
                                            }
                                        }
                                        <i class="fa  @i fa-2x"></i>
                                    </td>
                                    <td><span class="edititem" itemid="@x.ItemID">@ResourceKey("General.cmdEditIcon")</span></td>
                                    <td><span class="cmdSelection" itemid="@x.ItemID">@ResourceKey("View.runreport")<i title="Générer le rapport" class="fa fa-cogs fa-fw fa-2x"></i></span></td>
                                </tr>
                                                }
                                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>