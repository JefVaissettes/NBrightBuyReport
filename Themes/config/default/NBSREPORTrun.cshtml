@inherits NBrightBuy.render.NBrightBuyRazorTokens<NBrightDNN.NBrightRazor>
@using System.Globalization
@using System.Linq
@using System.Web.UI.WebControls
@using DotNetNuke.Entities.Portals
@using NBrightDNN
@using Nevoweb.DNN.NBrightBuy.Components
@using Nevoweb.DNN

@AddMetaData("resourcepath", "/DesktopModules/NBright/NBrightBuy/App_LocalResources/")
@AddMetaData("resourcepath", "/DesktopModules/NBright/NBrightBuyReport/App_LocalResources/")

<!--The basic File Upload plugin
<script src="/DesktopModules/NBright/NBrightBuy/Themes/config/js/jquery.fileupload.js"></script>-->

@{
    // assign Model, so we can resolve var in VS
    var info = (NBrightInfo)Model.List.First();
}

<input id="itemid" type="hidden" value="@info.ItemID" />
<input id="editlang" type="hidden" value="@info.Lang" />
<input id="currentlang" type="hidden" value="@CultureInfo.CurrentCulture" /> <!-- get the current culture and pass to the ajax server side, so it knows what language is -->
<input id="typecode" type="hidden" value="NBSREPORT" /><!-- used as selected edit itemid -->
<input id="selectlang" type="hidden" value="" /><!--used switch langauges -->
<!--Report name  -->


<div class="col-sm-5">
    <h2>@ResourceKey("Admin.name"): @info.GetXmlProperty("genxml/lang/genxml/textbox/name")</h2>
</div>

<div class="col-xs-12 col-sm-12 ">
    <div class="form-group">
        <div class="col-sm-12">

            <div class="col-sm-12">
            </div>
            <div class="actionbuttonwrapper">
                <button id="runreport" type="button" class="btn btn-primary">@ResourceKey("Admin.runreport")</button>
            </div>

        </div>
    </div>
</div>



